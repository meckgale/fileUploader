<!DOCTYPE html>
<html lang="en">
  <%- include('partials/header') %>

  <body>
    <%- include('partials/navbar') %>

    <!-- Display flash messages -->
    <% if (successMessage) { %>
    <div><%= successMessage %></div>
    <% } %> <% if (errorMessage) { %>
    <div><%= errorMessage %></div>
    <% } %>

    <div class="breadcrumbs text-xl p-4">
      <ul>
        <li>
          <a href="/folders">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              class="h-4 w-4 stroke-current"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z"
              ></path>
            </svg>
            <span class="ml-2">Folder</span>
          </a>
        </li>
        <li>
          <a href="/folders/<%= file.folderId %>">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              class="h-4 w-4 stroke-current"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 13h6m-3-3v6m5 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
              ></path>
            </svg>
            <span class="ml-2">Files</span>
          </a>
        </li>
        <li>
          <span class="inline-flex items-center gap-2">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              class="h-4 w-4 stroke-current"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 13h6m-3-3v6m5 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
              ></path>
            </svg>
            File
          </span>
        </li>
      </ul>
    </div>

    <h1 class="text-2xl font-bold p-4">File Name: <%= file.originalName %></h1>

    <div class="stats shadow m-4">
      <div class="stat">
        <div class="stat-title pb-2">
          File Type: <%= file.extension ? file.extension : "not defined" %>
        </div>
        <div class="stat-value pb-2">
          File Size: <%= (file.size / 1024).toFixed(2) %> KB
        </div>
        <div class="stat-desc">
          Uploaded at: <%= new Date(file.createdAt).toLocaleString() %>
        </div>
      </div>
    </div>

    <div class="p-4">
      <!-- Download link -->
      <a href="/files/<%= file.id %>/download"
        ><button class="btn btn-sm">Download</button></a
      >

      <!-- Delete file button -->
      <form
        action="/files/<%= file.id %>/delete"
        method="POST"
        style="display: inline"
      >
        <button type="submit" class="btn btn-sm">Delete File</button>
      </form>

      <button
        class="btn btn-sm ml-1"
        onclick="document.getElementById('deleteFileModal').showModal()"
      >
        Delete File
      </button>

      <!-- Modal for confirming deletion -->
      <dialog id="deleteFileModal" class="modal">
        <div class="modal-box">
          <h3 class="text-lg font-bold">
            Are you sure you want to delete this file?
          </h3>
          <p class="py-4">This action is permanent and cannot be undone!</p>
          <div class="modal-action">
            <!-- Yes button submits the form -->
            <form
              action="/files/<%= file.id %>/delete"
              method="POST"
              style="display: inline"
            >
              <button type="submit" class="btn btn-sm">Yes</button>
            </form>
            <!-- No button closes the modal -->
            <button
              class="btn btn-sm"
              onclick="document.getElementById('deleteFileModal').close()"
            >
              No
            </button>
          </div>
        </div>
      </dialog>
    </div>
  </body>
</html>
