<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Folders</title>
</head>

<body>
    <h1>Your Folders</h1>
    <% if (folders.length===0) { %>
        <p>No folders available.</p>
        <% } else { %>
            <!-- List of folders -->
            <ul>
                <% folders.forEach(function(folder) { %>
                    <li>
                        <%= folder.name %>
                        <!-- Add buttons for edit/delete -->
                        <form action="/folders/<%= folder.id %>/delete" method="POST" style="display:inline;">
                            <button type="submit">Delete</button>
                        </form>
                        <form action="/folders/<%= folder.id %>" method="POST" style="display:inline;">
                            <input type="text" name="name" value="<%= folder.name %>" required>
                            <button type="submit">Update</button>
                        </form>
                        
                        <!-- Form to upload file to this folder -->
                        <form action="/folders/<%= folder.id %>/upload" method="POST" enctype="multipart/form-data">
                            <input type="file" name="file" required>
                            <button type="submit">Upload File</button>
                        </form>
                        <!-- Display files in the folder -->
                        <ul>
                            <% folder.files.forEach(function(file) { %>
                                <li>
                                    <a href="/files/<%= file.id %>/download"><%= file.name %></a> <!-- Download link -->
                                </li>
                            <% }) %>
                        </ul>
                    </li>
                <% }) %>
            </ul>
            <% } %>

                <!-- Create new folder form -->
                <form action="/folders/create" method="POST">
                    <input type="text" name="name" placeholder="Folder name" required>
                    <button type="submit">Create Folder</button>
                </form>
</body>

</html>